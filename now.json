{
  "version": 2,
  "builds": [
    {
      "src": "./backend/package.json",
      "use": "@now/node-server",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "./frontend/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/frontend",
      "dest": "/frontend/$1"
    },
    {
      "src": "/backend",
      "dest": "/backend/$1"
    }
  ]
}